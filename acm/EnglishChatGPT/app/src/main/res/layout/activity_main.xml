<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/ISpeakBtn"
        android:layout_width="194dp"
        android:layout_height="113dp"
        android:text="I Speek"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="68dp" />

    <ListView
        android:id="@+id/ResponeList"
        android:layout_width="555dp"
        android:layout_height="669dp"
        app:layout_constraintTop_toBottomOf="@+id/ISpeakBtn"
        tools:layout_editor_absoluteX="32dp" />

    <EditText
        android:id="@+id/voiceIndexShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="voice index:"
        app:layout_constraintStart_toEndOf="@+id/ISpeakBtn"
        tools:layout_editor_absoluteY="107dp" />

</androidx.constraintlayout.widget.ConstraintLayout>